<!DOCTYPE html>
<html>
  <head>
    <title>HardwareStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div id="body_layer" class="container-scroller">
        <%= render "layouts/navbar" %>
        <div class="container-fluid page-body-wrapper">
          <%= render "layouts/sidebar" %>
          <div class="main-panel">
            <% if notice %>
              <div class="alert alert-success" role="alert">
                <%= notice %>
              </div>
            <% elsif alert %>
              <div class="alert alert-danger" role="alert">
                <%= alert %>
              </div>
            <% end %>
            <div class="content-wrapper">
              <%= yield %>
            </div>
            <%= render "layouts/footer" %>
          </div>
          <!-- main-panel ends -->
        </div>
      <!-- page-body-wrapper ends -->
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>

<script>
  $(document).ready(function(){

    $(".navbar-toggler.navbar-toggler-right").click(function(e) {
      e.preventDefault();
      $("#sidebar").toggleClass("active");
    });

    $(".alert").fadeTo(2000, 500).slideUp(500, function(){
      $(".alert").slideUp(500);
    });

    $('#body_layer').on("keypress", ".onlyPositiveInteger", function(evt) {
      var charCode = (evt.which) ? evt.which : evt.keyCode
      if (charCode > 31 && (charCode < 48 || charCode > 57))
         return false;
      return true;
    });

    $('#body_layer').on("paste", ".onlyPositiveInteger", function(evt) {
      evt.preventDefault();
		  return false;
    });

  });
</script>
