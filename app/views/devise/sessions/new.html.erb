<div class="container-scroller">
<div class="container-fluid page-body-wrapper full-page-wrapper">
  <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
    <div class="row w-100">
      <div class="col-lg-4 mx-auto">
        <div class="auto-form-wrapper">
            <h4 class="card-title">Login</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <p class="card-description">
              <small class="text-danger "><%= alert %></small>
            </p>
            <div class="form-group">
              <label class="label">Email</label>
              <div class="input-group">
              <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Email Address" %>
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="mdi mdi-check-circle-outline"></i>
                  </span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="label">Password</label>
              <div class="input-group">
                <%= f.password_field :password, autocomplete: "off" , :class=>"form-control", :placeholder => "***********"%>
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="mdi mdi-check-circle-outline"></i>
                  </span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit "Sign me in", :class=>"btn btn-primary submit-btn btn-block",  data: { disable_with: "Signing..." } %>
            </div>
            <div class="form-group d-flex justify-content-between">
              <div class="form-check form-check-flat mt-0">
                <label class="form-check-label">
              </div>
              <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot Password?", new_password_path(resource_name), :class => 'text-small forgot-password text-black', data: { no_turbolink: true } %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= render "layouts/blank_layout_footer" %>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
