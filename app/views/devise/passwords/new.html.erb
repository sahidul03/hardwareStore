<div class="container-scroller">
<div class="container-fluid page-body-wrapper full-page-wrapper">
  <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
    <div class="row w-100">
      <div class="col-lg-4 mx-auto">
        <div class="auto-form-wrapper">
            <h4 class="card-title">Forgot your password?</h4>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <label class="label">Email</label>
              <div class="input-group">
              <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Email Address" %>
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="mdi mdi-check-circle-outline"></i>
                  </span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit "Send me reset password instructions", :class=>"btn btn-primary submit-btn btn-block",  data: { disable_with: "Sending password instructions..." } %>
            </div>
            <div class="form-group d-flex justify-content-between">
              <div class="form-check form-check-flat mt-0">
                <label class="form-check-label">
              </div>
              <% unless user_signed_in? %>
                <%= link_to "Back to Login page", new_user_session_path, :class => 'text-primary text-small forgot-password text-black', data: { no_turbolink: true } %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= render "layouts/blank_layout_footer" %>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
