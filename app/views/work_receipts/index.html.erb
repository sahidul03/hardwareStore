<div class="row">
  <div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="card-header">
          <div class="row">
            <div class="col-4">
              <span class="display-4 text-primary">Payment Receipts</span>
            </div>
            <div class="col-3">
              <select class="form-control pull-right" value="<%= params[:status]%>" name="payment_status" id="payment_status">
                <option value="all">Paid and unpaid both payments</option>
                <option value="paid">Only paid payments</option>
                <option value="unpaid">Only unpaid payments</option>
              </select>
            </div>
            <div class="col-5">
              <input type="button" id="search_button" class="btn btn-primary pull-right" value="Search">
              <input type="search" id="search_by_car_no" class="pull-right search-field" value="<%= params[:car] %>" placeholder="Search by Car No">
            </div>
          </div>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Customer</th>
              <th>Car Number</th>
              <th>Due</th>
              <th>Paid</th>
              <th>Total</th>
              <th>Order Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @work_receipts.each do |receipt| %>
              <%- user = receipt.user %>
              <%- customer = receipt.customer %>
              <tr>
                <td class="text-info">
                  <%= receipt.id %>
                </td>
                <td><%= link_to(customer.name, customer_path(customer.id)) %></td>
                <td><%= receipt.car_no %></td>
                <td>
                  <label class="badge badge-<%= (receipt.due || 0) > 0 ? 'danger' : 'success' %>"><%= receipt.due %></label>
                </td>
                <td><%= receipt.paid_amount %></td>
                <td><%= receipt.total %></td>
                <td> <%= receipt.created_at.strftime("%d-%m-%Y %I:%M %P") %> </td>
                <td>
                  <%= link_to work_receipt_path(receipt), class: 'btn btn-outline-primary' do %>
                    Details
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="mt-3 pull-right">
          <%= paginate @work_receipts %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){

    $("#payment_status").val("<%= params[:status] || 'all' %>");

    function setSearchParams() {
      var url = location.pathname;
      var car = $("#search_by_car_no").val();
      var status = $("#payment_status").val();
      if (car) {
        url = url + '?car=' + car;
      }
      if (status) {
        url = car ? (url + '&status=' + status) : (url + '?status=' + status)
      }
      window.location.href = url
    }

    $('#body_layer').on("click", "#search_button", function(evt) {
      setSearchParams();
    });

    $('#body_layer').on("keypress", "#search_by_car_no", function(evt) {
      var charCode = (evt.which) ? evt.which : evt.keyCode
      if (charCode == 13 && $("#search_by_car_no").val()) {
        setSearchParams();
      }
    });

    $('#body_layer').on("change", "#payment_status", function(evt) {
      setSearchParams();
    });

  });
</script>
