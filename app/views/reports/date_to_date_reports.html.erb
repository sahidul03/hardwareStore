<div class="row">
  <div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-lg-12 col-md-12 mb-3">
          <span class="display-4 text-primary">Reports based on day</span>
          </div>
        </div>
        <%= render partial: 'search_form_day_wise', locals: { start_date: @start_date, end_date: @end_date } %>
      </div>
      <div class="card-body">
        <div class="row">
            <div class="col-lg-12 cl-md-12 col-sm-12">
                <div id="printReportsContent">
                    <h4>All Reports from <span class="text-primary"><%= date_format_with_month_year @start_date %></span> to <span class="text-primary"><%= date_format_with_month_year @end_date %></span></h4><br>
                    <%= render partial: 'summary_reports', locals: { reports: @reports, report_base: 'Day' } %>
                </div>
                <div class="text-right mt-3 mb-3">
                    <button type="button" id="printReportsBtn" class="btn btn-primary btn-fw">Print</button>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){

    $('#body_layer').on("click", "#printReportsBtn", function(evt) {
      var printBody = document.getElementById('printReportsContent');
      var opt = { filename: 'Report.pdf' };
      html2pdf().set(opt).from(printBody).save();
    });

  });
</script>
